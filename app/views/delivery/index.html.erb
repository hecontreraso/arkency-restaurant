<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>
  
<section id="<%= "#{controller_name}-#{action_name}" %>">
	<div class="container">
		<div class="row">
			<div class="col-md-offset-4 col-md-4">
				<div class="panel panel-default">
				  <div class="panel-body">
				  	<%= image_tag 'logo.png', class: 'header-logo' %>
				  	<%= form_tag(root_path, { remote: true, class: 'form-group' }) do %>
				  		<br>
				  		<div class="input-group">
				  			<%= text_field_tag(:address, nil,
				  				{ placeholder: 'Tell us your actual location',
				  					class: 'form-control' }) %>
  							<span class="input-group-btn">
					  			<%= button_tag "I'm hungry!!", { class: 'btn btn-success' } %>
  							</span>
				  		</div>
				  	<% end %>
				  	<p class="response"></p>
				  </div>
				</div>
			</div>
		</div>
	</div>
</section>
<script src="https://maps.googleapis.com/maps/api/js?sensor=false&libraries=places"></script>
<script type="text/javascript">
	function initialize() {
    var input = document.getElementById('address');
    new google.maps.places.Autocomplete(input, {});
	}
	             
	google.maps.event.addDomListener(window, 'load', initialize);
</script>